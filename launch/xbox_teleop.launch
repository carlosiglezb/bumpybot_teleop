<launch>
    <arg name="joy_config" default="xbox" />
    <arg name="joy_dev" default="/dev/input/js0" />
    <arg name="config_filepath" default="$(find trikey_teleop)/config/$(arg joy_config).config.yaml" />
    <arg name="joy_topic" default="joy" />

    <node pkg="joy" type="joy_node" name="joy_node">
        <param name="dev" value="$(arg joy_dev)" />
        <param name="deadzone" value="0.5" />
        <param name="autorepeat_rate" value="1500" />
        <param name="coalesce_interval" value="0.0005"/>
        <remap from="joy" to="$(arg joy_topic)" />
    </node>

    <node pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
        <rosparam command="load" file="$(arg config_filepath)" />
        <remap from="joy" to="$(arg joy_topic)" />
        <remap from="cmd_vel" to="trikey/base_controller/cmd_vel"/>
    </node>
</launch>